FROM python:3.11-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

RUN pip install --no-cache-dir \
    streamlit==1.39.0 \
    pandas==2.2.3 \
    numpy==1.26.4 \
    pyarrow==17.0.0

COPY src/ src/

EXPOSE 8501

ENTRYPOINT ["streamlit", "run", "src/dashboard/app.py", "--server.address=0.0.0.0", "--server.port=8501", "--server.headless=true"]
