{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      },
      {
        "datasource": "prometheus",
        "enable": true,
        "hide": false,
        "iconColor": "rgba(255, 96, 96, 1)",
        "name": "Deployments",
        "tags": ["deployment"],
        "type": "tags"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Events Produced per Minute",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(rate(events_produced_total[$__rate_interval])) * 60",
          "legendFormat": "Total Events/min",
          "refId": "A"
        },
        {
          "expr": "sum(rate(events_produced_total[$__rate_interval])) by (sensor_type) * 60",
          "legendFormat": "{{sensor_type}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "auto"
          },
          "unit": "events/min"
        }
      }
    },
    {
      "title": "Kafka Consumer Lag",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(kafka_consumer_lag) by (topic, partition)",
          "legendFormat": "{{topic}} - p{{partition}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "thresholdsStyle": {"mode": "line+area"}
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1000},
              {"color": "red", "value": 10000}
            ]
          },
          "unit": "messages"
        }
      }
    },
    {
      "title": "Processing Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(processing_latency_seconds_bucket[$__rate_interval])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(processing_latency_seconds_bucket[$__rate_interval])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(processing_latency_seconds_bucket[$__rate_interval])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"},
          "custom": {"lineInterpolation": "smooth", "fillOpacity": 5}
        }
      }
    },
    {
      "title": "Anomalies Injected Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(rate(anomalies_injected_total[$__rate_interval])) by (sensor_type) * 60",
          "legendFormat": "{{sensor_type}}",
          "refId": "A"
        },
        {
          "expr": "sum(rate(anomalies_injected_total[$__rate_interval])) * 60",
          "legendFormat": "Total Anomalies/min",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "events/min",
          "color": {"mode": "palette-classic"},
          "custom": {"lineInterpolation": "smooth", "fillOpacity": 10}
        }
      }
    },
    {
      "title": "S3 Write Status",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 16},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(increase(s3_writes_total{status=\"success\"}[1h]))",
          "legendFormat": "Successful Writes",
          "refId": "A"
        },
        {
          "expr": "sum(increase(s3_writes_total{status=\"failure\"}[1h]))",
          "legendFormat": "Failed Writes",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        }
      }
    },
    {
      "title": "Data Quality Pass/Fail",
      "type": "piechart",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 16},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(quality_checks_total{result=\"pass\"})",
          "legendFormat": "Pass",
          "refId": "A"
        },
        {
          "expr": "sum(quality_checks_total{result=\"fail\"})",
          "legendFormat": "Fail",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed"}
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Pass"},
            "properties": [{"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}]
          },
          {
            "matcher": {"id": "byName", "options": "Fail"},
            "properties": [{"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}]
          }
        ]
      }
    },
    {
      "title": "Airflow Task Timeline",
      "type": "state-timeline",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 16},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "airflow_task_status",
          "legendFormat": "{{dag_id}} - {{task_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "gray", "value": null},
              {"color": "green", "value": 1},
              {"color": "red", "value": 2}
            ]
          }
        }
      }
    },
    {
      "title": "Dead-Letter Queue Size",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 16},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(increase(dead_letter_events_total[1h]))",
          "legendFormat": "Malformed Events (1h)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 100}
            ]
          }
        }
      }
    },
    {
      "title": "Total Events Produced",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 22},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(events_produced_total)",
          "legendFormat": "Total Events",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": null}
            ]
          }
        }
      }
    },
    {
      "title": "Events by Sensor Type",
      "type": "bargauge",
      "gridPos": {"h": 4, "w": 18, "x": 6, "y": 22},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(events_produced_total) by (sensor_type)",
          "legendFormat": "{{sensor_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    },
    {
      "title": "Throughput vs Lag Correlation",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 26},
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "targets": [
        {
          "expr": "sum(rate(events_produced_total[$__rate_interval])) * 60",
          "legendFormat": "Throughput (events/min)",
          "refId": "A"
        },
        {
          "expr": "sum(kafka_consumer_lag) / 1000",
          "legendFormat": "Consumer Lag (k messages)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineInterpolation": "smooth", "fillOpacity": 5}
        }
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["streaming", "etl", "iot"],
  "templating": {
    "list": [
      {
        "current": {"selected": false, "text": "prometheus", "value": "prometheus"},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "queryValue": "",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "type": "datasource"
      },
      {
        "current": {"selected": true, "text": "1h", "value": "1h"},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "name": "timerange",
        "options": [
          {"selected": false, "text": "15m", "value": "15m"},
          {"selected": false, "text": "30m", "value": "30m"},
          {"selected": true, "text": "1h", "value": "1h"},
          {"selected": false, "text": "6h", "value": "6h"},
          {"selected": false, "text": "24h", "value": "24h"},
          {"selected": false, "text": "7d", "value": "7d"}
        ],
        "query": "15m,30m,1h,6h,24h,7d",
        "skipUrlSync": false,
        "type": "custom",
        "name": "timerange",
        "label": "Time Range"
      }
    ]
  },
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  },
  "timezone": "utc",
  "title": "Pipeline Health",
  "uid": "pipeline-health",
  "version": 2,
  "weekStart": ""
}
